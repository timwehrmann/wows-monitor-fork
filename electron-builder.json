{
  "productName": "WoWs Monitor",
  "directories": {
    "output": "dist/release"
  },
  "files": [
    "dist/app-desktop/**/*",
    "src-electron/*.js"
  ],
  "generateUpdatesFilesForAllChannels": true,
  "win": {
    "icon": "dist/app-desktop/assets/icons",
    "target": [
      {
        "target": "nsis-web",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "publish": {
      "provider": "generic",
      "url": "https://api.wows-monitor.com/releases"
    }
  },
  "nsisWeb": {
    "artifactName": "wows-monitor-setup-${version}.${ext}"
  },
  "mac": {
    "icon": "dist",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ]
  }
}
